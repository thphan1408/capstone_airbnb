generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BinhLuan {
  id                 Int       @id @default(autoincrement())
  ma_cong_viec       Int?
  ma_nguoi_binh_luan Int?
  ngay_binh_luan     DateTime? @db.Date
  noi_dung           String?   @db.VarChar(250)
  sao_binh_luan      Int?
  NguoiDung          NguoiDung @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "BinhLuan_ibfk_1")
  Phong              Phong     @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "BinhLuan_ibfk_2")
}

model DatPhong {
  id             Int       @id @default(autoincrement())
  ma_phong       Int?
  ngay_den       DateTime? @db.Date
  ngay_di        DateTime? @db.Date
  so_luong_khach Int?
  ma_nguoi_dat   Int?
  NguoiDung      NguoiDung @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "DatPhong_ibfk_1")
  Phong          Phong     @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "DatPhong_ibfk_2")
}

model NguoiDung {
  id        Int       @id @default(autoincrement())
  name      String?   @db.VarChar(250)
  email     String?   @db.VarChar(250)
  pass_word String?   @db.VarChar(250)
  phone     String?   @db.VarChar(250)
  birth_day String?   @db.VarChar(250)
  gender    String?   @db.VarChar(250)
  role      String?   @db.VarChar(250)
  avatar    String?   @db.VarChar(255)
  BinhLuan  BinhLuan?
  DatPhong  DatPhong?
  Phong     Phong?
}

model Phong {
  id        Int       @id @default(autoincrement())
  ten_phong String?   @db.VarChar(250)
  khach     Int?
  phong_ngu Int?
  giuong    Int?
  phong_tam Int?
  mo_ta     String?   @db.VarChar(250)
  gia_tien  Int?
  may_giat  Boolean?
  ban_la    Boolean?
  tivi      Boolean?
  dieu_hoa  Boolean?
  wifi      Boolean?
  bep       Boolean?
  do_xe     Boolean?
  ho_boi    Boolean?
  ban_ui    Boolean?
  hinh_anh  String?   @db.VarChar(250)
  BinhLuan  BinhLuan?
  DatPhong  DatPhong?
  NguoiDung NguoiDung @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "Phong_ibfk_1")
  ViTri     ViTri?
}

model ViTri {
  id         Int     @id @default(autoincrement())
  ten_vi_tri String? @db.VarChar(250)
  tinh_thanh String? @db.VarChar(250)
  quoc_gia   Int?
  hinh_anh   String? @db.VarChar(250)
  Phong      Phong   @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "ViTri_ibfk_1")
}
